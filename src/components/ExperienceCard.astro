---
// Componente ExperienceCard.astro
interface Props {
  role: string;
  company: string;
  period: string;
  description: string;
  tech?: string[];
  url?: string;
}

const { role, company, period, description, tech, url } = Astro.props;
---

<div class="relative pl-6 border-l border-gray-300 mb-6">
  <div class="absolute -left-3 top-1 w-6 h-6 bg-blue-500 rounded-full"></div>
  <h3 class="text-lg font-semibold">{role} @ {company}</h3>
  <p class="text-sm text-gray-500">{period}</p>
  <p class="mt-2 text-gray-700 dark:text-white">{description}</p>
  <div class="mt-2 flex flex-wrap gap-2">
    {
      (tech ?? []).map((t) => (
        <span class="px-2 py-1 bg-gray-200 rounded text-xs dark:bg-purple-900 dark:text-white">
          {t}
        </span>
      ))
    }
  </div>

  {
    url && (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-2 inline-block text-blue-600 hover:underline text-sm"
      >
        Ver m√°s
      </a>
    )
  }
</div>
