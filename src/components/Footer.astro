---
import SocialLinks from "./SocialLinks.astro";

const links = [
  { label: "Inicio", href: "/" },
  { label: "Sobre mí", href: "#about" },
  { label: "Proyectos", href: "#projects" },
  { label: "Contacto", href: "#contact" },
];

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-[#6c21c0] text-white py-12 px-6 text-center dark:bg-gradient-to-b dark:from-gray-950 dark:via-gray-750 dark:to-gray-950 relative"
>
  <nav class="mb-6 flex flex-wrap justify-center gap-6">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="text-lg font-medium hover:underline hover:text-gray-200 transition-colors duration-200"
        >
          {link.label}
        </a>
      ))
    }
  </nav>

  <div class="mb-6 flex justify-center gap-4 text-sm">
    <SocialLinks />
  </div>

  <p class="text-sm text-gray-200">
    © {currentYear} Aitor — Desarrollador Web Fullstack. Todos los derechos reservados.
  </p>
</footer>
