---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  tech: string[];
  url?: string;
  iframe?: string;
  private?: boolean;
  video?: string;
}

const {
  title,
  description,
  tech,
  url,
  iframe,
  private: isPrivate,
  video,
} = Astro.props;
---

<div class="bg-gray-100 p-6 rounded-xl shadow-md text-left">
  <h3 class="text-xl font-semibold text-purple-700">{title}</h3>
  <p class="text-gray-700 mt-2">{description}</p>

  <div class="mt-4 flex flex-wrap gap-2">
    {
      tech.map((t) => (
        <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-sm">
          {t}
        </span>
      ))
    }
  </div>

  {
    url && (
      <a
        href={url}
        target="_blank"
        class="mt-4 inline-block text-purple-600 underline text-sm"
      >
        Ver proyecto
      </a>
    )
  }

  {
    iframe && (
      <div class="mt-4">
        <iframe src={iframe} class="w-full h-64 rounded" loading="lazy" />
      </div>
    )
  }

  {
    video && (
      <div class="mt-4">
        <video src={video} controls class="w-full rounded" />
      </div>
    )
  }

  {
    isPrivate && (
      <p class="text-xs text-gray-500 mt-2 italic">
        * Proyecto privado - demo no p√∫blica
      </p>
    )
  }
</div>
