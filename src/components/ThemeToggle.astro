<button
  onclick="const current = document.documentElement.classList.contains('dark'); document.documentElement.classList.toggle('dark', !current); localStorage.setItem('theme', !current ? 'dark' : 'light');"
  class="bg-gray-200 dark:bg-gray-800 text-black dark:text-white w-10 h-10 flex items-center justify-center rounded-lg cursor-pointer"
  aria-label="Toggle theme"
>
  🌓
</button>
